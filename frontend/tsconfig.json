{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "lib": [
      "dom",
      "es6",
      "esnext",
      "es2015"
    ],
    "outDir": "./dist/",
  },
  "include": [
    "./src/**/*.ts",
    "src/scripts/components/unit/Enemy.ts"
  ],
  "typeRoots": [
    "./node_modules/phaser/types"
  ],
  "types": [
    "Phaser"
  ]
}
